{
  "name": "vlsub-opensubtitles-com-optimized",
  "version": "2.0.0",
  "description": "AI-Enhanced Stremio Subtitle Addon with Performance Optimizations",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t vlsub-addon .",
    "docker:run": "docker run -p 7000:7000 vlsub-addon",
    "backup": "node scripts/backup-database.js"
  },
  "keywords": [
    "stremio",
    "addon",
    "subtitles",
    "ai",
    "opensubtitles",
    "performance",
    "redis",
    "sqlite",
    "worker-threads"
  ],
  "author": "VLSub Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "node-fetch": "^2.7.0",
    "adm-zip": "^0.5.10",
    "better-sqlite3": "^9.2.2",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vlsub/vlsub-opensubtitles-com.git"
  },
  "bugs": {
    "url": "https://github.com/vlsub/vlsub-opensubtitles-com/issues"
  },
  "homepage": "https://github.com/vlsub/vlsub-opensubtitles-com#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "lib/**/*.js",
      "services/**/*.js",
      "!lib/**/*.test.js",
      "!services/**/*.test.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "camelcase": "off"
    }
  }
}